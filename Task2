/* Student Grade Tracker*/

# Define the grade management program
def grade_management():
    # Dictionary to store grades for each subject
    grades = {}

    # Function to calculate the average grade
    def calculate_average(grades):
        if len(grades) == 0:
            return 0
        total = sum(grades.values())
        return total / len(grades)

    # Function to determine the letter grade
    def determine_letter_grade(average):
        if average >= 90:
            return 'A'
        elif average >= 80:
            return 'B'
        elif average >= 70:
            return 'C'
        elif average >= 60:
            return 'D'
        else:
            return 'F'

    # Function to determine the GPA
    def determine_gpa(average):
        if average >= 90:
            return 4.0
        elif average >= 80:
            return 3.0
        elif average >= 70:
            return 2.0
        elif average >= 60:
            return 1.0
        else:
            return 0.0

    # Function to input grades
    def input_grades():
        while True:
            subject = input("Enter the subject or assignment (or type 'done' to finish): ")
            if subject.lower() == 'done' or subject.lower() == '':
                break
            try:
                grade = float(input(f"Enter the grade for {subject}: "))
                if 0 <= grade <= 100:
                    grades[subject] = grade
                else:
                    print("Please enter a grade between 0 and 100.")
            except ValueError:
                print("Invalid input. Please enter a numeric value.")

    # Input grades
    input_grades()

    # Calculate average, letter grade, and GPA
    average = calculate_average(grades)
    letter_grade = determine_letter_grade(average)
    gpa = determine_gpa(average)

    # Display results
    print("\nGrade Summary:")
    for subject, grade in grades.items():
        print(f"{subject}: {grade}")
    print(f"Average Grade: {average:.2f}")
    print(f"Letter Grade: {letter_grade}")
    print(f"GPA: {gpa:.2f}")

# Run the grade management program
grade_management()
